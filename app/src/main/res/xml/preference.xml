<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/numbers_of_columns_title_array"
        android:entryValues="@array/numbers_of_columns_value_array"
        android:key="numbers_of_column_preference"
        android:summary="choose how many picture show per row"
        android:title="Numbers of Column" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="is_theme_light_preference"
        android:summary="Change Theme"
        android:summaryOff="Theme Color Dark"
        android:summaryOn="Theme Color Light"
        android:switchTextOff="Dark"
        android:switchTextOn="Light"
        android:text="Change Theme"
        android:title="Change Theme" />
</PreferenceScreen>